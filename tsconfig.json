{
  "compilerOptions": {
    "target": "ES2017",                                
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                             
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ],                                  
     "allowJs": true,                                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "skipLibCheck": true                               
  },
  "include": [
    "src/**/*.ts"
  ]
}
